@import "super/i-block/i-block.styl"

$p = {
	navItemColor: c(grey 1)
	navItemHoverColor: c(grey 3)
}

b-header extends i-block
	&__header
		display flex
		align-items center
		justify-content space-between
		height 60px
		padding 0 16px

	&__logo
		height 40px

	&__nav
		display flex
		padding 16px

	&__nav-item
		color $p.navItemColor
		interpolate-props(getDSOptions("text.base"))

		text-transform uppercase
		text-decoration none
		transition 0.2s ease-in color

		&:hover
			color $p.navItemHoverColor

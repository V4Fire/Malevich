@import "@super/p-v4-components-demo/b-v4-component-demo/b-v4-component-demo.styl"

$p = {
	borderColor: c(grey 6)
	shadowColor: c(grey 5)
	selectedModColor: c(white 1)
	selectedModBgColor: c(blue 1)

	rounding: getDSOptions("rounding.small")
}

b-v4-component-demo
	width 100%
	border none

	&__buttons
		display inline-block
		margin-left 16px
		border 1px solid $p.borderColor
		border-radius $p.rounding
		padding @border-radius

	&
	&__mods
		background none

	&__mods
		padding 16px
		border 1px solid $p.borderColor
		border-radius $p.rounding
		box-shadow 0px -2px 3px inset $p.shadowColor

	&__mod-value
		padding 4px 8px
		font-weight 400
		background none

		&_selected_true
			border-radius $p.rounding
			color $p.selectedModColor
			background-color $p.selectedModBgColor

	&__title
		display none

@import "super/i-dynamic-page/i-dynamic-page.styl"

$p = {

}

p-demo extends i-dynamic-page
	&__content
		padding 0 32px
		color getDSOptions("colors.grey.0")

	&__header
		padding 24px 0 16px
		font-size 36px
		color getDSOptions("colors.grey.1")

	&__label
		font-size 12px
		text-transform uppercase
		color getDSOptions("colors.grey.2")

	&__text-container
		margin-top 16px

	&__text-additional
		padding 16px
		border-radius getDSOptions("rounding.small")
		background getDSOptions("colors.grey.0")
		color getDSOptions("colors.white.0")

	&__text
		margin-top 8px

	&__props p
		margin 8px

	&__props
	&__text
		$textStyles = getDSOptions(text)

		if $textStyles
			for $key, $val in $textStyles
				if $key != "heading"
					&_style_{$key}
						interpolate-props(getField($val, style))

				else
					for $opts, $index in $val
						if $opts
							&_style_{$key + $index}
								interpolate-props(getField($opts, style))

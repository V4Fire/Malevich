@import "super/i-dynamic-page/i-dynamic-page.styl"

$p = {

}

p-publish extends i-dynamic-page
	&__content
		flex-col center
		width 600px
		box-sizing border-box

		padding-top 60px
		margin 0 auto

		text-align center

	&__thumbnail
		margin 20px

	&__file-info
		width 100%
		text-align left

	&__file-name
		font-size 20px
		line-height 1.2
		font-weight 500

	&__file-version
		font-size 12px
		line-height 1.2

	&__file-last-modified
		font-size 16px
		line-height 1.2

	&__form
		flex-col center
		width 600px
		margin-top 12px

	&__form-title
		width 100%

		text-align left

	&__commit-submit
		align-self flex-start
		margin-top 12px
